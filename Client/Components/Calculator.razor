<div class="mt-5">
    <h4>Kalkulator</h4>
    <div class="row mt-3">
            <div class="col-sm">
            <div class="form-group">
                <label for="name">Pierwsza liczba</label>
                <input type="text" class="form-control" id="name" @bind-value="@first">
            </div>
            <div class="form-group mt-2">
                <label for="surname">Druga liczba</label>
                <input type="text" class="form-control" id="surname" @bind-value="@second">
            </div>
            <button class="btn btn-primary mt-3" @onclick="Calculate">Zapisz</button>
            </div>
            <div class="col-sm"></div>
            <div class="col-sm"></div>
    </div>
    <div class="row mt-5">
         <div class="col-sm">
             <h1>Wynik: @result</h1>
         </div>
    </div>
</div>

@code {

    [Parameter]
    public string OperationType { get; set; }

    int first;
    int second;
    int result;

    void Calculate()
    {
        if (OperationType == "dodawanie")
            result = first + second;
        else
            result = first * second;
    }
}